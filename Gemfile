source %(https://rubygems.org)

group :development do
  %w[
    rubocop-rspec
    rubocop-rake
    keycutter
    rspec
    rake
    yard
  ].each do |this_gem|
    gem this_gem
  end
end

group :production do
  %w[
    terraform-synthesizer
    abstract-synthesizer
    pangea-component
  ].each do |this_gem|
    gem this_gem
  end
end
